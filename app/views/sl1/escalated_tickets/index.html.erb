<% page_title "Escalated Tickets" %>

<div class="p-3 bg-white rounded box-shadow">
  <h5 class="border-bottom border-gray pb-2 mb-0">Escalated Tickets


    <span class="badge badge-<%= SearchTicket::STATUS_ESCALATED_TO_LEVEL_2 %> float-right">
      <%= SearchTicket::STATUS_ESCALATED_TO_LEVEL_2.humanize %>: <%= @tickets.size %>
    </span>
  </h5>

  <div class="container">
    <% @tickets.each do |ticket| %>
      <div class="row pb-3 mb-0 pt-3 lh-125 border-bottom border-gray">
        <div class="col-sm-5">
          <%= ticket.id %>: <a href="<%= sl1_search_ticket_path(ticket) %>"><%= ticket.item_title %></a>
        </div>
        <div class="col-sm-2  text-center fs-90">
          <small class="font-weight-light text-muted">Callnumber</small><br/>
          <%= ticket.item_callnumber %>
        </div>
        <div class="col-sm-5  text-center fs-90">
          <small class="font-weight-light text-muted ">Progress Report</small><br/>
          The processing of this ticket has been escalated to level 2.
        </div>
      </div>
    <% end %>
  </div>
</div>
