<h1>New Search Tickets</h1>

<br/>
<%= form_tag sl1_start_search_path, method: :patch do %>

<table class="table table-xsm">
  <thead class="thead-light">
    <tr>
      <th></th>
      <th>Title</th>
      <th>Call Number</th>
      <th>Item ID</th>
      <th>Status</th>
      <th class="text-left">Assigned To</th>
      <th></th>
    </tr>
  </thead>
  <% @tickets.each do |ticket| %>
    <tr>
      <td><%= check_box_tag "search_ticket_ids[]", ticket.id %> <%= ticket.id %></td>
      <td><%= ticket.item_title %></td>
      <td>
        <%= ticket.item_callnumber %>
      </td>
      <td><%= ticket.item_id %></td>
      <td class="search_ticket_status"><%= ticket.status %></td>
      <td>
        <% if ticket.assigned_to %>
          <%= ticket.assigned_to.name %>
        <% else %>
          ---
          <!-- <a href="#" class="btn btn-sm btn-primary btn-block">Start Search</a> -->
        <% end %>

      </td>
      <td>
        <a href="<%= sl1_search_ticket_path(ticket) %>" class="btn btn-sm btn-outline-dark">i</a>
      </td>
    </tr>
  <% end %>
  <tr>
    <td colspan="2"><%= submit_tag "Assign & Start Search Now!", class: "btn btn-sm btn-primary"%></td>
  <tr>
  <% end %>
</table>
