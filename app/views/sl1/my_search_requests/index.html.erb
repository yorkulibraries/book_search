<h1>My Search Requests</h1>

<br/>

<table class="table table-xsm">
  <thead class="thead-light">
    <tr>
      <th></th>
      <th>Title</th>
      <th>Call Number</th>
      <th>Item ID</th>
      <th>Status</th>
      <th class="text-left">Assigned To</th>
      <th></th>
    </tr>
  </thead>
  <% @requests.each do |request| %>
    <tr>
      <td><%= check_box_tag "search_request_ids[]", request.id %> <%= request.id %></td>
      <td><%= request.item_title %></td>
      <td>
        <%= request.item_callnumber %>
      </td>
      <td><%= request.item_id %></td>
      <td><%= request.status %></td>
      <td>
          <%= request.assigned_to.name %>
      </td>
      <td>
        <a href="#" class="btn btn-sm btn-primary">Log Search Attempt</a>
      </td>
    </tr>
  <% end %>
</table>

<%= link_to "SL1 New Requests", sl1_new_requests_path, class: "btn btn-sm btn-link btn-primary" %>

