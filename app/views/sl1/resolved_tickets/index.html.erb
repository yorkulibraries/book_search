<% page_title "Resolved Tickets" %>

<div class="p-3 bg-white rounded box-shadow">
  <h5 class="border-bottom border-gray pb-2 mb-0">Resolved Tickets


    <span class="badge badge-<%= SearchTicket::STATUS_RESOLVED %> float-right">
      <%= SearchTicket::STATUS_RESOLVED.humanize %>: <%= @resolved_tickets.size %>
    </span>
  </h5>

  <div class="container">
    <% @resolved_tickets.each do |ticket| %>
      <div class="row pb-3 mb-0 pt-3 lh-125 border-bottom border-gray">
        <div class="col-sm-5">
          <%= ticket.id %>: <a href="<%= sl1_search_ticket_path(ticket) %>"><%= ticket.item_title %></a>
        </div>
        <div class="col-sm-2  text-center fs-90">
          <small class="font-weight-light text-muted">Callnumber</small><br/>
          <%= ticket.item_callnumber %>
        </div>
        <div class="col-sm-5  text-center fs-90">
          <small class="font-weight-light text-muted ">Resolution</small><br/>
          <%= ticket.patron_ticket_resolution_description %>
        </div>        
      </div>
    <% end %>
  </div>
</div>

<hr/>



<h1>Search Resolved Tickets</h1>
<div class="card card border-success mb-3">
  <div class="card-header text-white border-0 bg-success pt-1 pb-1">
    Ticket Details <span class="badge badge-light float-right mt-1"><%= @resolved_tickets.size %></span>
  </div>
  <ul class="list-group list-group-flush border border-top-0 border-success">
    <% @resolved_tickets.each do |ticket| %>
    <li class="list-group-item border-success" data-resolved-ticket-id="<%= ticket.id %>">
      <div class="row">
        <div class="col ">
          <%= link_to sl1_search_ticket_path(ticket) do %>
            <%= ticket.item_title %>
          <% end %>

          <div class="row">
            <div class="col col-sm-6">
              <small>
                <span class="text-muted font-weight-light d-block d-sm-inline">Call Number:</span>
                <span class=""><%= ticket.item_callnumber %></span>
              </small>
            </div>
            <div class="col">
              <small>
                <span class="text-muted font-weight-light d-block d-sm-inline">Item #:</span>
                <span class=""><%= ticket.item_id %></span>
              </small>
            </div>
            <div class="col">
              <small>
                <span class="text-muted font-weight-light d-block d-sm-inline">Assigned To #:</span>
                <% if ticket.assigned_to %>
                  <span class="font-weight-bold"><%= ticket.assigned_to.name if ticket.assigned_to %></span>
                <% else %>
                <% end %>
              </small>
            </div>
          </div>
          <div class="row">
            <div class="col col-sm-6">
              <small>
                <span class="text-muted font-weight-light d-block d-sm-inline">Location:</span>
                <span class=""><%= ticket.item_location %></span>
              </small>
            </div>
            <div class="col">
              <small>
                <span class="text-muted font-weight-light d-block d-sm-inline">Ticket ID:</span>
                <span class=""><%= ticket.id %></span>
              </small>
            </div>
            <div class="col">
              <small>
                <span class="text-muted font-weight-light d-block d-sm-inline">Resolution:</span>
                <span class=""><%= ticket.resolution.humanize.capitalize %></span>
              </small>
            </div>
          </div>

        </div>

        <div class="col-sm-2 mt-2 text-right d-none d-sm-block">
          <a href="<%= sl1_search_ticket_path(ticket) %>" class="btn btn-sm btn-info"><span class="fa fa-eye"></span></a>
        </div>
      </div>
    </li>
    <% end %>
  </ul>

  <div class="card-footer bg-transparent border-success border d-none d-sm-block text-right">
  </div>
</div>

<br/>
