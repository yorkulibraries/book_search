<h1>New Search Requests</h1>

<br/>
<table class="table table-xsm">
  <thead class="thead-light">
    <tr>
      <th></th>
      <th>Title</th>
      <th>Call Number</th>
      <th>Item ID</th>
      <th class="text-left">Assigned To</th>
      <th></th>
    </tr>
  </thead>
  <% @requests.each do |request| %>
    <tr>
      <td><input type="checkbox"></td>
      <td><%= request.item_title %></td>
      <td>
        <%= request.item_callnumber %>
      </td>
      <td><%= request.item_id %></td>
      <td>
        <% if request.assigned_to %>
          <%= request.assigned_to.name %>
        <% else %>
          <a href="#" class="btn btn-sm btn-primary btn-block">Start Search</a>
        <% end %>

      </td>
      <td>
        <a href="#" class="btn btn-sm btn-outline-dark">i</a>
      </td>
    </tr>
  <% end %>

</table>

<a href="#" class="btn btn-sm btn-primary">Start Search</a>
