<h5 class="text-muted">Search Ticket History</h5>
<small>
  <table class="table table-striped table-sm">
    <thead>
      <tr>
        <th>#</th>
        <th>Who</th>
        <th>When</th>
        <th>What</th>
        <th>Result</th>
      </tr>
    </thead>
    <tbody>
      <% @ticket.work_logs.each_with_index do |log, index| %>
        <tr>
          <td><%= index + 1 %></td>
          <td><%= log.employee.name %></td>
          <td><%= log.created_at.strftime("%Y-%m-%d") %></td>
          <td>Searched <%= log.search_areas.map { |sa| sa.name}.join(", ") %></td>
          <td><%= log.result.humanize.capitalize %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</small>


<% if @ticket.work_logs.size > 0 %>
<h3>Search History</h3>
<table class="table table-responsive-sm table-sm">
  <thead>
    <tr>
      <th>Who</th>
      <th>Searched...</th>
      <th>When</th>
      <th>Result</th>
      <th>Location Found</th>
      <th>Note</th>
    </tr>
  </thead>
  <tbody>
    <% @ticket.work_logs.each do |log| %>
    <tr>
      <td><%= log.employee.name %></td>
      <td>
        <%= log.search_areas.map { |sa| sa.name}.join(", ") %>
      </td>
      <td>
        <span class="timeago" title="<%= log.created_at.getutc.iso8601 %>">
           <%= log.created_at.strftime("%Y-%m-%d") %>
        </span>
      </td>
      <td>
        <span class="badge badge-<%= log.result == SearchTicket::WorkLog::RESULT_FOUND ? "success" : "danger" %>">
          <%= log.result.humanize.capitalize %>
        </span>
      </td>
      <td><%= log.found_location %></td>
      <td><%= log.note %></td>

    </tr>
    <% end %>
  </tbody>
</table>
<% end %>
