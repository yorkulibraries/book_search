<h1>Search In Progress Requests</h1>

<br/>


<table class="table table-xsm">
  <thead class="thead-light">
    <tr>
      <th>Title</th>
      <th>Call Number</th>
      <th>Item ID</th>
      <th>Status</th>
      <th class="text-left">Assigned To</th>
      <th></th>
    </tr>
  </thead>
  <% @requests.each do |request| %>
    <tr>
      <td><%= request.item_title %></td>
      <td>
        <%= request.item_callnumber %>
      </td>
      <td><%= request.item_id %></td>
      <td class="search_request_status"><%= request.status %></td>
      <td>
        <%= request.assigned_to.name if request.assigned_to %>
      </td>
      <td>
        <a href="<%= sl1_search_request_path(request) %>" class="btn btn-sm btn-outline-dark">i</a>
      </td>
    </tr>
  <% end %>
</table>
