<div class="p-3 bg-white rounded box-shadow">
  <h5 class="border-bottom border-gray pb-2 mb-0">Assigned To Me
    &nbsp;&nbsp;<%= link_to "Print Tickets", print_tickets_to_search_path(ticket_ids: @assigned_tickets.ids),
      class: "btn btn-sm btn-light fs-60i border" %>

    <span class="badge badge-<%= SearchTicket::STATUS_SEARCH_IN_PROGRESS %> float-right" data-assigned-tickets-count="<%= @assigned_tickets.size %>">
      <%= SearchTicket::STATUS_SEARCH_IN_PROGRESS.humanize %>: <%= @assigned_tickets.size %>
    </span>
  </h5>

  <div class="container">
    <% @assigned_tickets.each do |ticket| %>
      <div class="row pb-3 mb-0 pt-3 lh-125 border-bottom border-gray">
        <div class="col-sm-7">
            <a href="<%= sl1_search_ticket_path(ticket) %>"><%= ticket.item_title %></a>
        </div>
        <div class="col-sm-2  text-center fs-90">
          <small class="font-weight-light text-muted">Callnumber</small><br/>
          <%= ticket.item_callnumber %>
        </div>
        <div class="col-sm-2  text-center fs-90">
          <small class="font-weight-light text-muted ">Created On</small><br/>
          <%= ticket.created_at.strftime("%b %e, %Y") %>
        </div>
        <div class="col-sm-1   text-center fs-90">
          <small class="font-weight-light text-muted">ID:   </small><br/>
          <%= ticket.id %>
        </div>
      </div>
    <% end %>
  </div>
</div>

<hr/>
