<% page_title "Search Results" %>

<div class="p-3 bg-white rounded box-shadow">
  <h5 class="border-bottom border-gray pb-2 mb-0">
      Searching for Ticket or Item ID: <%= @search_query %>

      <span class="bg-status-new rounded text-white p-1 fs-70 float-right">
         Found:
        <span class="badge badge-light" data-search-results="<%= @tickets.size %>">
          <%= @tickets.size %>
        </span>
      </span>
  </h5>

  <div class="container">
    <% @tickets.each do |ticket| %>
      <div class="row pb-3 mb-0 pt-3 lh-125 border-bottom border-gray">
        <div class="col-sm-5">
          <%= ticket.id %>: <a href="<%= search_result_path(ticket) %>"><%= ticket.item_title %></a>
        </div>
        <div class="col-sm-2  text-center fs-90">
          <small class="font-weight-light text-muted">Callnumber</small><br/>
          <%= ticket.item_callnumber %>
        </div>
        <div class="col-sm-5  text-left fs-90">
          <small class="font-weight-light text-muted ">Status</small><br/>
          <%= ticket.ticket_status_description %>
        </div>
      </div>
    <% end %>

    <% if @tickets.size == 0 %>
    <div class="row pb-3 mb-0 pt-4 lh-125 border-bottom border-gray">
      <div class="col-sm-12  text-center fs-150i  text-muted font-weight-light">
        <p>We did not find any tickets matching your search query. </p>
      </div>
    </div>
    <% end %>
  </div>
</div>

<hr/>
