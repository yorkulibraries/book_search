<% page_title "#{@employee.class} Details" %>
<%= bootstrap_card do %>
  <%= bootstrap_card_body title: (defined?(@employee.name)) ? @employee.name : "Untitled Card" do %>
    <div class="card-subtitle mb-0 text-muted">
      <small><%= @employee.login_id %></small>
    </div>
    <hr/>

    <div class="row">
      <div class="col-md-12">
  
      <ul class="list-group list-group-flush">
        <li class="list-group-item">
          <div class="d-flex w-100 justify-content-between">
            <div class="font-weight-bold">Name</div>
              <%= @employee.name %>
          </div>
        </li>          
        <li class="list-group-item">
          <div class="d-flex w-100 justify-content-between">
            <div class="font-weight-bold">Role</div>
              <%= @employee.role %>
          </div>
        </li>          
        <li class="list-group-item">
          <div class="d-flex w-100 justify-content-between">
            <div class="font-weight-bold">Email</div>
              <%= @employee.email %>
          </div>
        </li>          
        <!-- <li class="list-group-item">
          <div class="d-flex w-100 justify-content-between">
            <div class="font-weight-bold">Login</div>
              <%= @employee.login_id %>
          </div>
        </li>           -->
        <li class="list-group-item">
          <div class="d-flex w-100 justify-content-between">
            <div class="font-weight-bold">Location</div>
              <%= @employee.location.name %>
          </div>
        </li>          
        <li class="list-group-item">
          <div class="d-flex w-100 justify-content-between">
            <div class="font-weight-bold">Active</div>
              <%= @employee.active %>
          </div>
        </li>          
      
        <li class="list-group-item">
          <%= link_to 'Make Changes', edit_admin_employee_path(@employee), class: 'btn btn-sm btn-primary' %>
          <%= link_to "View All", admin_employees_path, class:"btn btn-sm btn-danger" %>
        </li>
      
      </ul>
        
      </div>
    </div>
  <% end %> <!-- card-body-->
<% end %> <!-- card -->
