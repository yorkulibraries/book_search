<% page_title "#{@patron.class} Details" %>
<%= bootstrap_card do %>
  <%= bootstrap_card_body title: (defined?(@patron.name)) ? @patron.name : "Untitled Card" do %>
    <div class="card-subtitle mb-0 text-muted">
      <small>Patron Subtitle</small>
    </div>
    <hr/>

    <div class="row">
      <div class="col-md-12">
  
      <ul class="list-group list-group-flush">
        <li class="list-group-item">
          <div class="d-flex w-100 justify-content-between">
            <div class="font-weight-bold">Name</div>
              <%= @patron.name %>
          </div>
        </li>          
        <li class="list-group-item">
          <div class="d-flex w-100 justify-content-between">
            <div class="font-weight-bold">Email</div>
              <%= @patron.email %>
          </div>
        </li>          
        <li class="list-group-item">
          <div class="d-flex w-100 justify-content-between">
            <div class="font-weight-bold">Login</div>
              <%= @patron.login_id %>
          </div>
        </li>          
      
        <li class="list-group-item">
          <%= link_to 'Make Changes', edit_admin_patron_path(@patron), class: 'btn btn-sm btn-primary' %>
          <%= link_to "View All", admin_patrons_path, class:"btn btn-sm btn-danger" %>
        </li>
      
      </ul>
        
      </div>
    </div>
  <% end %> <!-- card-body-->
<% end %> <!-- card -->
