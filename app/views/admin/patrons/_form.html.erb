

<div class="card">
  <div class="card-header">
    <div class="row">
      <div class="col-md-12 col-sm-12">
        <h4 class="card-title">Patron</h4>
        <h5 class="card-subtitle mb-2 text-muted"><span class="badge badge-info">subtitle</span></h5> 
      </div>
    </div>
  </div>
  <div class="card-body">
<%= simple_form_for([:admin, @patron]) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :email %>
    <%= f.input :login_id %>
  </div>
  <hr/>
  <div class="form-actions">
    <%= f.button :submit, class: "btn btn-md btn-success" %>
    <%= link_to "Cancel", admin_patrons_path, class:"btn btn-danger" %>
  </div>
<% end %>
  <br/>
  </div> <!-- card body close -->
</div> <!-- card close -->