<table class="table table-striped table-sm">
  <thead class="">
    <tr>
        <th scope="col">Name</th>
        <th scope="col">Address</th>
        <th scope="col">Email</th>
        <th scope="col">Phone</th>
        <th scope="col">Ils code</th>
        <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @locations.each do |location| %>
      <tr>
          <td><%= location.name %></td>
          <td><%= location.address %></td>
          <td><%= location.email %></td>
          <td><%= location.phone %></td>
          <td><%= location.ils_code %></td>
          <td><%= link_to 'Show', [:admin, location], class: 'btn btn-sm btn-primary' %></td>
          <td><%= link_to 'Edit', edit_admin_location_path(location), class: 'btn btn-sm btn-secondary' %></td>
          <td><%= link_to 'Destroy', [:admin, location], method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-sm btn-danger' %></td>
      </tr>
    <% end %>
  </tbody>
</table>
