<% page_title "Settings" %>


<%= bootstrap_card do %>
  <%= bootstrap_card_body do %>
    <%= bootstrap_tabs do %>
      <%= bootstrap_tabs_item href: "#email", active: true do %>
        Email
      <% end %>

      <%= bootstrap_tabs_item "Legal", href: "#legal", classes: "append-after-nav-item" %>
    <% end %>

    <%= bootstrap_tabs_content classes: "border border-top-0 px-2 py-3 mb-3" do %>
      <%= bootstrap_tabs_pane "email", active: true, classes: "p-3" do %>
        <%= render partial: "email" %>
      <% end %>
      <%= bootstrap_tabs_pane "legal", classes: "p-3" do %>
        <%= render partial: "legal" %>
      <% end %>

    <% end %>
  <% end %>
<% end %>
