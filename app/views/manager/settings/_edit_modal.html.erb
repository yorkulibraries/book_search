<%= bootstrap_modal id: "edit_setting", size: "modal-lg" do %>
  <%= bootstrap_modal_header "Edit: #{@field_name.humanize}", dismissable: true %>
  <%= bootstrap_modal_body do %>
    <%= render 'form' %>

    <% if @field_name.index("email") != nil %>
      <hr/>
      <%= render 'email_placeholders' %>
    <% end %>
  <% end %>
<% end %>
