<dl class="row">
  <dt class="col-sm-1 text-muted font-weight-light">Patron</dt>
  <dd class="col-sm-6"><%= @ticket.patron_name %></dd>
  <dt class="col-sm-2 text-muted font-weight-light">Date Created</dt>
  <dd class="col-sm-2"><%= @ticket.created_at.strftime('%a, %b, %-d %Y')  %></dd>
</dl>
<dl class="row">
  <dt class="col-sm-1 text-muted font-weight-light">Email</dt>
  <dd class="col-sm-6"><%= @ticket.patron.email %></dd>
</dl>
