      Disabled
    end
  end

  bootstrap_tabs_content classes: "border border-top-0 px-2 py-3" do
    bootstrap_tabs_pane "open", active: true do
      Open Pane
    end

    bootstrap_tabs_pane "closed", classes: "bg-secondary" do
      Closed Pane
    end

    bootstrap_tabs_pane "disabled" do
      Disabled Pane
    end

  end
<% end %>

