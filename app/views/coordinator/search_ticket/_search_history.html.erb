<h5 class="text-muted">Search Ticket History</h5>
<small>
  <table class="table table-striped table-sm">
    <thead>
      <tr>
        <th>#</th>
        <th>Who</th>
        <th>When</th>
        <th>What</th>
        <th>Result</th>
        <th>Note</th>
      </tr>
    </thead>
    <tbody>
      <% @ticket.work_logs.each_with_index do |log, index| %>
        <tr>
          <td><%= index + 1 %></td>
          <td><%= log.employee.name %></td>
          <td><%= log.created_at.strftime("%Y-%m-%d") %></td>
          <td>Searched <%= log.search_areas.map { |sa| sa.name}.join(", ") %></td>
          <td><%= log.result.humanize.capitalize %></td>
          <td><%= log.note %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</small>
