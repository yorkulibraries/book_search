<% page_title "Search Ticket Details" %>


<div class="p-3 bg-white rounded box-shadow">
  <h3 class="border-bottom border-gray pb-2 mb-0"><%= @ticket.item_title %></h3>
  <div class="container">
    <br/>
    <dl class="row">
      <div class="col">
        <dt class="text-muted font-weight-light">Callnumber</dt>
        <dd><%= @my_ticket.item_callnumber %></dd>
        <dt class="text-muted font-weight-light">Author:</dt>
        <dd><%= @my_ticket.item_author %></dd>
      </div>
      <div class="col">
        <dt class="text-muted font-weight-light">Volume</dt>
        <dd><%= @my_ticket.item_volume %></dd>
        <dt class="text-muted font-weight-light">Issue</dt>
        <dd><%= @my_ticket.item_issue %></dd>
      </div>
      <div class="col">
        <dt class="text-muted font-weight-light">Year</dt>
        <dd><%= @my_ticket.item_year %></dd>
        <dt class="text-muted font-weight-light">Item Location</dt>
        <dd><%= @my_ticket.location.name %></dd>
      </div>
    </dl> <!-- dl row end -->
  </div>
</div>

<br/>
<div class="p-3 mb-2 bg-status-<%= @ticket.status %> text-center">
  <span class="text-uppercase mb-1 d-inline-flex p-2 border border-white"><%= @ticket.status.humanize %></span>
  <br/>
  <%= @ticket.patron_ticket_status_description %>
</div>

<br/>


<%= render partial: "search_history" %>
